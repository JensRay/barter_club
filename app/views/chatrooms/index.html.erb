<div class="info-small border text-center text-primary pt-1">
  <h4 class="mb-0"> Inbox</h4>
</div>


<div class="container">

  <% @chatrooms.each do |c| %>
   <% if c.offer.user || c.offer.original_item.user == current_user %>
   <%= link_to chatroom_path(c) do %>
    <div class="border-bottom">

      <i class="far fa-envelope fa-2x text-primary"></i>

      <div class="d-flex align-items-center ">
        <p class="mb-0">
          Chat with
          <% if c.offer.user || c.offer.original_item.user != current_user %>
            <%= c.offer.user.name.capitalize %>
          <% else %>
            <%= c.offer.original_item.user.name.capitalize %>
          <% end %>
          to close the deal
        </p>
      </div>


      <div class="d-flex">

        <div class="text-primary mr-1">
          <% if current_user.items.include?(c.offer.original_item) %>
            <p><%= c.offer.original_item.name %></p>
          <% else %>
            <p><%= c.offer.my_item.name %></p>
          <% end %>
        </div>

        <i class="fas fa-exchange-alt mt-1"></i>
        <div class="text-warning ml-1">
          <% if current_user.items.include?(c.offer.original_item) %>
            <p><%= c.offer.my_item.name %></p>
          <% else %>
            <p><%= c.offer.original_item.name %></p>
          <% end %>
        </div>
      </div>
     </div>
     <% end %>
     <% end %>
    <% end %>



  </div>

    <!-- Here is the nav bar. DONT TOUCH!
 -->


<div class="navbar navbar-expand-sm navbar-light navbar-barters navbar-sticky fixed-bottom mt-0">

    <%= link_to items_path do %>

    <i class='fa fa-frog fa-2x' id="icons"></i>
    <% end %>

  <%= link_to new_item_path do %>
   <i class='fa fa-plus-square fa-2x text-primary' id="icons" ></i>
  <% end %>

     <% if current_user %>
      <%= link_to offers_path do %>

      <i class='fa fa-exchange-alt fa-2x text-primary' id="icons"></i>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path do %>
      <i class='fa fa-exchange-alt fa-2x text-primary' id="icons"></i>
      <% end %>
    <% end %>

    <div>
    <% if current_user %>

      <div class="dropup">
        <i class=" fa fa-user fa-2x text-primary" id="icons"></i>
          <div class="dropup-content">
           <%= link_to 'My profile', user_path(current_user)  %>
            <%= link_to 'Inbox', chatrooms_path  %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete %>
          </div>
        </div>

    <% else %>
      <%= link_to new_user_session_path do %>
        <i class='fa fa-user fa-2x text-primary' id="icons"></i>
      <% end %>
    <% end %>
</div>





