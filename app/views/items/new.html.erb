<div class="banner">post your item</div>

<div class="container pt-5 p-4 d-block">
  <div>
    <%= simple_form_for @item do |f| %>
          <%= f.input :name,
                  placeholder: "Your item name?" %>
          <%= f.input :description,
                  placeholder: "Details of your item!" %>
          <%= f.input :category,
                  collection: Item::CATEGORIES%>
          <%#= f.association :tags,
                  as: :check_boxes,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <br>
          <div class="text-center">
          <%=f.button :submit, "Submit", class: "btn-flat-green btn-lg text-center btn-full-green"%>
          </div>
    <% end %>
  </div>
</div>

