<div class="card card-item-show">
  <div class="card-header text-center"><%= @item.name %></div>

  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% @item.photos.each do |photo| %>
        <div class="carousel-item active">
          <%= cl_image_tag photo.key, class: 'd-block w-100 card-img-top' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card-header">Seller</div>
  <div class="card-body d-flex">
    <div class="card-img-top card-img-user w-auto mr-3">
      <%= cl_image_tag @item.user.photo.key, class: 'avatar-large' %>
    </div>
    <div class="card-text pl-3">
      <div class="card-title"><%= link_to @item.user.name.capitalize, user_path(@item.user) %></div>
      <div class="card-subtitle text-muted"><%= link_to @item.user.address.capitalize, user_path(@item.user) %></div>
    </div>
  </div>

  <div class="card-header">Description</div>
    <div class="card-body">
      <div class="card-text"><%= @item.description %></div>
    </div>
  </div>
  <div>
    <p>
      <button class="btn col text-center collapse-buttons" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Comments
  </button>
    </p>
    <div class="collapse" id="collapseExample">
    <div class="card card-body">
    <!-- <div class="form-group"> -->
     <!--  <label for="comment"></label>
      <textarea class="form-control" rows="3" id="comment" placeholder="Add your comment..."></textarea>
   <--  </div> -->
      <!-- <button class="btn btn-primary" type="button">Send</button> -->

      <%= simple_form_for [@item, @comment] do |f| %>
          <%= f.input :content %>
          <%= f.submit "Send", class: "col btn-sm"%>
      <% end %>

      <% @item.comments.each do |comment| %>
      <div class="mb-0 bg-light">
        <p class="m-3"><strong><%= comment.user.name %></strong></p>
        <p><%= comment.content %></p>

      </div>
      <% end %>



  </div>
</div>
  </div>

  <% @offers.each do |offer| %>
      <%= link_to item_path(offer.my_item) do %>
  <div class="card-product d-inline">
      <% if offer.original_item == @item %>

      <div class="d-flex ">
      <%= cl_image_tag offer.my_item.photos.first.key, height: 300, width: 400, crop: :fill %>

      <div class="card-product-infos">
        <h2><%=offer.my_item.name %></h2>
        <p><%= offer.my_item.name %></p>
        <% if offer.status == nil %>
        <p>Bid by <%= offer.user.name %>, waiting for <%= offer.original_item.user.name %> to respond...</p>
        <% end %>
      </div>
      </div>
  <% end %>
    <% end %>
    <% end %>



<%= link_to new_item_offer_path(@item) do %>
  <div class="btn-sticky text-center bg-white mb-0">
  <button class="btn-long"> Trade</button>
</div>
<% end %>


