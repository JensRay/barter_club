<div class="info-small border text-center text-primary pt-1">
  <h1 class="mb-0"> Trade Room</h1>
</div>

<!-- Tab links -->
<div class="tab d-flex justify-content-center">
  <button  class="tablinks "onclick="openCity(event, 'active')" id="defaultOpen">Active Trades</button>
  <button class="tablinks" onclick="openCity(event, 'closed')">Closed trades</button>

</div>

<!-- Tab content -->
<div id="active" class="tabcontent">
  <div class="border bg-light text-primary p-1 text-center ">
    <p class="mb-0 "> <strong>Your offers</strong></p>
  </div>

<div class="border p-2">
  <% @offers.each do |offer| %>
    <% if offer.original_item.user == current_user && offer.pending? %>
      <div class="d-flex justify-content-between align-items-center pt-1 pb-1 pl-1 rounded">
        <%= link_to item_path(offer.my_item_id) do %>
        <div class=" card-mini-1 p-4 text-center">
          <h6><%= offer.my_item.name %></h6>
          <%= cl_image_tag offer.my_item.photos.first.key, class: "rounded", height: 125, width:125, crop: :fill %>
          </div>
        <% end %>
        <img src="https://www.flaticon.com/svg/static/icons/svg/152/152360.svg" alt="" height="50px" width="50px" class="icon">
        <div class="card-mini-2 p-4 text-center">
        <%= link_to item_path(offer.original_item_id) do %>
        <h6><%= offer.original_item.name %></h6>
        <%= cl_image_tag offer.original_item.photos.first.key, class: "rounded", height: 125, width:125, crop: :fill %>
        <% end %>
        </div>
      </div>
    <div class="text-center">
      <p class="mb-0"><%= offer.user.name.capitalize%> has placed a bid on your <strong><%= offer.original_item.name%></strong> with <strong><%= offer.my_item.name %></strong></p>
      <div class="d-flex justify-content-center mb-1">
        <%= link_to offer_path(offer, status:'accept'),method: :patch, data: {confirm: "Are you sure you want to accept this offer?"} do %>
        <div class="btn-sm-green">Accept</div>
        <% end %>
        <%= link_to offer_path(offer, status:'decline'), method: :patch, data: {confirm: "Are you sure you want to decline this offer?"} do %>
         <div class="btn-sm-grey">Decline</div>
        <% end %>
    </div>
  </div>



    <% end %>
  <% end %>

  <div class="border bg-light text-primary text-center p-1 ">
  <p class="mb-0 "><strong>Your bids</strong></p>
</div>


  <div class="border p-2">
    <% @offers.each do |bid| %>
      <% if bid.user == current_user && bid.pending? %>
        <div class=" d-flex justify-content-between align-items-center pt-1 pb-1 pl-1 rounded">
          <%= link_to item_path(bid.original_item) do %>
          <div class="card-mini-1 p-4 text-center">
          <h6><%= bid.original_item.name %></h6>
          <%= cl_image_tag bid.original_item.photos.first.key, class: "rounded", height: 125, width:125, crop: :fill %>
           </div>
          <% end %>

          <img src="https://www.flaticon.com/svg/static/icons/svg/152/152360.svg" alt="" height="50px" width="50px" class="icon">
          <div class="card-mini-2 p-4 text-center">
            <%= link_to item_path(bid.my_item_id) do %>
            <h6><%= bid.my_item.name %></h6>
            <%= cl_image_tag bid.my_item.photos.first.key, class: "rounded", height: 125, width:125, crop: :fill %>

            <% end %>
            </div>

        </div>
      <div class="text-center">
        <p class="mb-0">You have placed a bid on  <strong><%= bid.original_item.name%></strong> with <strong><%= bid.my_item.name %></strong></p>
        <div class="d-flex justify-content-center mb-1">
          <p>Waiting for <%= bid.original_item.user.name.capitalize %> to accept or decline</p>
      </div>
    </div>

      <% end %>
    <% end %>
  </div>


</div>

</div>

<div id="closed" class="tabcontent">
  <div class="border bg-light text-primary text-center p-1">
  <p class="mb-0 "><strong>Accepted trades</strong></p>
  </div>

  <div class="border p-2">
  <% @offers.each do |offer| %>
    <% if (offer.original_item.user  == current_user && offer.accept?) || (offer.user  == current_user && offer.accept?) %>
      <div class="d-flex justify-content-between align-items-center pt-1 pb-1 pl-1 rounded">
        <%= link_to item_path(offer.my_item_id) do %>
        <div class="card-mini-1 p-4 text-center ">
          <h6><%= offer.my_item.name %></h6>
          <%= cl_image_tag offer.my_item.photos.first.key, class: "rounded", height: 125, width:125, crop: :fill %>
         </div>
         <% end %>
        <img src="https://www.flaticon.com/svg/static/icons/svg/152/152360.svg" alt="" height="50px" width="50px" class="icon">
        <%= link_to item_path(offer.original_item_id) do %>
        <div class="card-mini-2 p-4 text-center ">
          <h6><%= offer.original_item.name %></h6>
        <%= cl_image_tag offer.original_item.photos.first.key, class: "rounded", height: 125, width:125, crop: :fill %>
        </div>
        <% end %>
      </div>
    <div class="text-center">
      <% if offer.original_item.user != current_user %>
        <p class="mb-0">Congrats, <%= offer.original_item.user.name.capitalize %> has accepted your offer. You have a deal!</p>
        <p class="mb-0"> Please send an email to <%= offer.original_item.user.email %> </p>
      <% else %>
        <p class="mb-0">Congrats, you have accepted <%= offer.user.name.capitalize%>'s offer. You have a deal!</p>
        <p class="mb-0"> Please send an email to <%= offer.user.email %> </p>




      <% end %>


    <% end %>
  <% end %>
</div>



  <div class="border bg-light text-primary text-center p-1">
  <p class="mb-0 "><strong>Declined bids</strong></p>
  </div>
   <div class="border p-2">
  <% @offers.each do |offer| %>
    <% if  (offer.user  == current_user && offer.decline?) %>
      <div class="d-flex justify-content-between border pt-1 pb-1 pl-1">
        <%= link_to item_path(offer.my_item_id) do %>
        <%= cl_image_tag offer.original_item.photos.first.key, class: "rounded", height: 125, width:125, crop: :fill %>
        <% end %>
        <img src="https://www.flaticon.com/svg/static/icons/svg/152/152360.svg" alt="" height="50px" width="50px" class="icon">
        <%= link_to item_path(offer.original_item_id) do %>
        <%= cl_image_tag offer.my_item.photos.first.key, class: "rounded", height: 125, width:125, crop: :fill %>
        <% end %>
      </div>
    <div class="text-center">
      <% if offer.original_item.user != current_user %>
        <p class="mb-0">Sorry, <%= offer.original_item.user.name.capitalize %> has declined your offer. Better luck next time!</p>
        <p class="mb-0"> Please send an email to <%= offer.original_item.user.email %> </p>
      <% end %>


    <% end %>
  <% end %>
</div>


  </div>
</div>








<script>
function selectTab(tabIndex) {
  //Hide All Tabs
  console.log("hello");
  document.getElementById('tab1Content').style.display="none";
  document.getElementById('tab2Content').style.display="none";




  //Show the Selected Tab
  document.getElementById('tab' + tabIndex + 'Content').style.display="block";
}

function openCity(evt, cityName) {


  // Declare all variables
  var i, tabcontent, tablinks;

  // Get all elements with class="tabcontent" and hide them
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }

  // Get all elements with class="tablinks" and remove the class "active"
  tablinks = document.getElementsByClassName("tablinks");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" active", "");
  }

  // Show the current tab, and add an "active" class to the button that opened the tab
  document.getElementById(cityName).style.display = "block";
  evt.currentTarget.className += " active";
}
document.getElementById("defaultOpen").click()
</script>

