<div class="info-small border text-center pt-1">
  <h1 class="mb-0"> Trade Room</h1>
</div>

<div class="border bg-light text-success p-1 text-center ">
  <p class="mb-0 ">Your offers</p>
</div>

<div class="border p-2">
  <% @offers.each do |offer| %>
    <% if offer.original_item.user == current_user && offer.pending? %>
      <div class="d-flex justify-content-between border pt-1 pb-1 pl-1">
        <%= cl_image_tag offer.original_item.photos.first.key, class: "rounded", height: 75, width:75, crop: :fill %>
        <img src="https://www.flaticon.com/svg/static/icons/svg/152/152360.svg" alt="" height="75px" width="75px">
        <%= cl_image_tag offer.my_item.photos.first.key, class: "rounded", height: 75, width:75, crop: :fill %>
      </div>
    <div class="text-center">
      <p class="mb-0"><%= offer.user.name.capitalize%> has place a bid on your <strong><%= offer.original_item.name%></strong> with <strong><%= offer.my_item.name %></strong></p>
      <div class="d-flex justify-content-center mb-1">
        <%= link_to 'Accept', offer_path(offer, status:'accept'),method: :patch, data: {confirm: "Are you sure you want to accept this offer?"}  %>
        <%= link_to 'Decline', offer_path(offer, status:'decline'), method: :patch, data: {confirm: "Are you sure you want to decline this offer?"}  %>
    </div>

    <% end %>
  <% end %>
</div>

<div class="border bg-light text-success text-center p-1 ">
  <p class="mb-0 ">Your bids</p>
</div>


  <div class="border p-2">
    <% @offers.each do |bid| %>
      <% if bid.user == current_user && bid.pending? %>
        <div class="d-flex justify-content-between border pt-1 pb-1 pl-1">
          <%= cl_image_tag bid.my_item.photos.first.key, class: "rounded", height: 75, width:75, crop: :fill %>
          <img src="https://www.flaticon.com/svg/static/icons/svg/152/152360.svg" alt="" height="75px" width="75px">
          <%= cl_image_tag bid.original_item.photos.first.key, class: "rounded", height: 75, width:75, crop: :fill %>
        </div>
      <div class="text-center">
        <p class="mb-0">You have place a bid on  <strong><%= bid.original_item.name%></strong> with <strong><%= bid.my_item.name %></strong></p>
        <div class="d-flex justify-content-center mb-1">
          <p>Waiting for <%= bid.original_item.user.name.capitalize %> to accept or decline</p>
      </div>

      <% end %>
    <% end %>
  </div>

  <div class="border bg-light text-success text-center p-1 ">
  <p class="mb-0 ">Accepted trades</p>
  </div>

  <div class="border p-2">
  <% @offers.each do |offer| %>
    <% if (offer.original_item.user  == current_user && offer.accept?) || (offer.user  == current_user && offer.accept?) %>
      <div class="d-flex justify-content-between border pt-1 pb-1 pl-1">
        <%= cl_image_tag offer.original_item.photos.first.key, class: "rounded", height: 75, width:75, crop: :fill %>
        <img src="https://www.flaticon.com/svg/static/icons/svg/152/152360.svg" alt="" height="75px" width="75px">
        <%= cl_image_tag offer.my_item.photos.first.key, class: "rounded", height: 75, width:75, crop: :fill %>
      </div>
    <div class="text-center">
      <% if offer.original_item.user != current_user %>
        <p class="mb-0">Congrats, <%= offer.original_item.user.name.capitalize %> has accepted your offer. You have a deal!</p>
        <p class="mb-0"> Please send an email to <%= offer.original_item.user.email %> </p>
      <% else %>
        <p class="mb-0">Congrats, you have accepted <%= offer.user.name.capitalize%>'s offer. You have a deal!</p>
        <p class="mb-0"> Please send an email to <%= offer.user.email %> </p>
      <% end %>


    <% end %>
  <% end %>
</div>



  <div class="border bg-light text-success text-center p-1 ">
  <p class="mb-0 ">Declined bids</p>
  </div>
   <div class="border p-2">
  <% @offers.each do |offer| %>
    <% if  (offer.user  == current_user && offer.decline?) %>
      <div class="d-flex justify-content-between border pt-1 pb-1 pl-1">
        <%= cl_image_tag offer.original_item.photos.first.key, class: "rounded", height: 75, width:75, crop: :fill %>
        <img src="https://www.flaticon.com/svg/static/icons/svg/152/152360.svg" alt="" height="75px" width="75px">
        <%= cl_image_tag offer.my_item.photos.first.key, class: "rounded", height: 75, width:75, crop: :fill %>
      </div>
    <div class="text-center">
      <% if offer.original_item.user != current_user %>
        <p class="mb-0">Sorry, <%= offer.original_item.user.name.capitalize %> has declined your offer. Better luck next time!</p>
        <p class="mb-0"> Please send an email to <%= offer.original_item.user.email %> </p>
      <% end %>


    <% end %>
  <% end %>
</div>


  </div>

