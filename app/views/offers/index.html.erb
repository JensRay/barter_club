                <%= cl_image_tag offer.my_item.photos.first.key, class: "rounded", height: 200, width:175, crop: :fill %>
              </div>
            <% end %>
          </div>

          <div class="container bg-white text-center">
            <div class="row">
              <h6 class="col-4 text-warning" ><%= offer.original_item.name %></h6>
