
<nav class="nav nav-page pt-2 pb-2 nav-pills nav-fill">
  <a class="nav-item text-left pl-3" href="/offers"><i class="fas fa-chevron-left"></i></a>
  <a class="nav-item text-center " href="#">Trade details</a>
</nav>


<div class="d-flex justify-content-between align-items-center">
  <div>
    <h3><%= @original_item.name %></h3>
    <%= cl_image_tag @original_item.photos.first.key, height: 150, width: 150, crop: :fill%>
    <p>Owner: <%= @original_item.user.name %></p>
    <div class="p-1 mb-2 bg-success "></div>
  </div>

  <div>
    <img src="https://www.flaticon.com/svg/static/icons/svg/152/152360.svg" alt="" height="50px" width="50px">

<div class="border bg-light p-1 text-center mb-4 ">
  <p class="mb-0 ">Confirmation</p>
</div>

<div class="d-flex justify-content-between align-items-center border pt-4 pb-4">
  <div class="ml-3 text-center ">
    <h3><%= @original_item.name.capitalize %></h3>
    <%= cl_image_tag @original_item.photos.first.key, height: 150, width: 150, crop: :fill, class: 'img-thumbnail' %>
    <p class="mb-1">Owner: <%= @original_item.user.name.capitalize %></p>
    <div class="border-top  "></div>
  </div>

  <div>
    <i class="fa fa-exchange-alt fa-4x"></i>

  </div>

  <div class="mr-3 text-center">
    <h3><%= @my_item.name.capitalize %></h3>
    <%= cl_image_tag @my_item.photos.first.key, height: 150, width: 150, crop: :fill, class: 'img-thumbnail'%>
    <p class="mb-1">Owner: <%= @my_item.user.name.capitalize %></p>
    <div class=" border-top "></div>
  </div>
</div>


</div>
<div class=" d-flex justify-content-center mt-4">
<%= link_to offers_path do %>
  <button class="btn-ghost mr-1 "> Confirm</button>
<% end %>
<%= link_to offer_path(@offer), method: :delete, data: {confirm: "Are you sure?"} do %>
  <button class="btn-ghost-red ml-2 "> Discard</button>
<% end %>

</div>
