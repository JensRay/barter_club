<div class="home-container">
  <div class="vidcon">
    <video id="video-bg" playsinline autoplay muted loop>
      <source src="<%=image_path "barter-club.mp4" %>" type="video/mp4">
      Your browser does not play the video.
    </video>
  </div>

  <div class="video-overlay d-flex justify-content-center">
    <div class="banner banner-landing">
      <h1 class="banner-landing-title font-weight-bold">The Barter Club </h1>
        <p>Money-free trading</p>
          <%#= link_to "Logout", destroy_user_session_path, method: :delete %>
    </div>
  </div>
</div>


  <!-- Here is the nav bar. DONT TOUCH!
 -->


<div class="navbar navbar-expand-sm navbar-light navbar-barters-home navbar-sticky fixed-bottom mt-0">

    <%= link_to items_path do %>

    <i class='fa fa-frog fa-2x' id="icons"></i>
    <% end %>

  <%= link_to new_item_path do %>
   <i class='fa fa-plus-square fa-2x text-primary' id="icons" ></i>
  <% end %>

     <% if current_user %>
      <%= link_to offers_path do %>

      <i class='fa fa-exchange-alt fa-2x text-primary' id="icons"></i>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path do %>
      <i class='fa fa-exchange-alt fa-2x text-primary' id="icons"></i>
      <% end %>
    <% end %>

    <div>
    <% if current_user %>

      <div class="dropup">
        <i class=" fa fa-user fa-2x text-primary" id="icons"></i>
          <div class="dropup-content">
           <%= link_to 'My profile', user_path(current_user)  %>
            <%= link_to 'Inbox', chatrooms_path  %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete %>
          </div>
        </div>

    <% else %>
      <%= link_to new_user_session_path do %>
        <i class='fa fa-user fa-2x text-primary' id="icons"></i>
      <% end %>
    <% end %>
</div>



