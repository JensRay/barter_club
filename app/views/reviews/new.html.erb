<div class="border bg-light p-1 text-center mb-4 ">
  <p class="mb-0 ">Confirmation</p>
</div>

<div class="form">
    <h1>Rate Your Trade</h1>
      <%= simple_form_for [ @offer, @review ] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: Review::RATING%>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>
</div>



  <!-- Here is the nav bar. DONT TOUCH!
