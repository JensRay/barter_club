<div class="header mb-2">
  <div class="d-flex justify-content-around">
      <%= form_tag items_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        type: "search",
        class: "form-control",  id: "searchbar",
        placeholder: "Search items..." %>
      <% end %>
   </div>
</div>
<div class="header-category mb-3">
  <div class="form-row mt-2 mb-3 pl-3 pr-3">
    <%= form_tag items_path, method: :get do %>
      <div class="d-flex justify-content-around">
        <%= link_to(query: "near", controller: "items") do %>
          <i class="fas fa-map-marker-alt col-2 btn-link", id="nearme"></i>
        <% end %>
        <%= select_tag :category, options_for_select(Item::ALLCATEGORIES), class: "btn-link ml-2 mr-2", id: "select-apply" %>
        <%= submit_tag "Apply", class: "btn-link ml-2", id: "apply" %>
      </div>
    <% end %>
  </div>
</div>
<hr>
