<div class="header mb-3 p-4">
    <div class="d-flex justify-content-center">
      <%= form_tag items_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        type: "search",
        class: "form-control",  id: "searchbar",
        placeholder: "Search items..." %>
      <% end %>
    </div>
</div>
  <div class="header-category   ">
    <div class="form-row justify-content-around mt-3 mb-4 ">
      <%= form_tag items_path, method: :get do %>
        <div class="d-flex">
          <%= link_to(query: "near", controller: "items") do %>
            <i class="fas fa-map-marker-alt col-2 btn-link", id="nearme"></i>
          <% end %>
          <%= select_tag :category, options_for_select(Item::ALLCATEGORIES), class: "btn-link ml-4 mr-3", id: "select-apply" %>
          <%= submit_tag "Apply", class: "btn-link ml-2", id: "apply" %>
        </div>
      <% end %>
    </div>
  </div>

