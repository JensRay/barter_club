<div class="banner">Trader Profile</div>

<div class="card card-profile text-center">
  <div class="card-img-top  mt-5">
   <%= cl_image_tag @user.photo.key, class: 'avatar-large' %>
  </div>
  <div class="card-body text-center">
    <h5 class="card-title"><%= @user.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @user.email %></h6>
    <p class="card-text mt-3"><%- @user.bio %></p>
</div>
  <div class="card-footer p-1 text-muted">
    <ul class="nav nav-fill">
      <li class="nav-item">
        <a class="trade-cal nav-link disabled" href="#">
          <%= current_user.offers.count do |offer| %>
          <% offer.pending? %>
          <% end %>
        </a>
        <a class="card-subtitle text-capitalize nav-link disabled" href="#">BIDS</a>
      </li>
      <li class="nav-item">
        <a class="trade-cal nav-link disabled" href="#">
          <%= current_user.offers.count do |offer| %>
          <% offer.accept? %>
          <% end %>
        </a>
        <a class="card-subtitle text-capitalize text-capitalizenav-link disabled" href="#">ENDED</a>
      </li>
      <li class="nav-item">
        <a class="trade-cal nav-link disabled" href="#">
           <%= current_user.offers.count do |offer| %>
          <% offer.decline? %>
          <% end %>
        </a>
        <a class="card-subtitle text-capitalize nav-link disabled" href="#">CANCELED</a>
      </li>
  </ul>
  </div>
</div>

<div class="card-body rating text-center">
  <h6 class="card-subtitle mb-2 mt-2 text-muted">Rating & Reviews</h6>
  <span class="stars" style="">
    <% if @average_rating != nil %>
      <% @average_rating.times do%>
        <i class="fa fa-star mt-2"></i>
      <% end %>
      <% @average_blank_stars.times do %>
        <i class="far fa-star"></i>
      <% end %>
    <% end %>
  </span>



<%#= @my_item.user.name.capitalize %>
<%#= offer.my_item.name %>
<%#= @original_item.user.name %>
<%#= offer.original_item.name %>
 <%#= cl_image_tag @user.photo.key, class: 'avatar-large' %>

 <p class="text-muted font-weight-light">based on <%= pluralize @reviews.count, "review" %></p>


  <div class="list-group text">
    <ul class="list-group-item list-group-item-action flex-column">
      <% @reviews.each do |review| %>
      <div class="reviews">
        <li class="d-flex w-100 justify-content-between"><%= review.user.name %> placed a review on <%= review.created_at.strftime("%b %d, %Y") %></li>
        <li class="d-flex w-100 justify-content-between">
          <span class="stars" style="">
            <% if @average_rating != nil %>
              <% @average_rating.times do%>
                <i class="fa fa-star mt-2"></i>
              <% end %>
              <% @average_blank_stars.times do %>
                <i class="far fa-star mt-2"></i>
              <% end %>
            <% end %>
          </span>
        </li>
        <li class="d-flex w-100 justify-content-between mb-4"><%= review.content %></li>
      </div>
      <% end %>
    </ul>
  </div>
</div>


<div class="card-deck user-items">
  <div class="card-header text-center text-capitalize mt-3"> <%= @user.name.capitalize %>'s' Items </div>

    <% @user.items.each do |item| %>
      <%= link_to item_path(item) do %>
        <div class="card user-item">
            <% if item.photos.size == 1 %>
              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <%= cl_image_tag item.photos.first.key, class: 'd-block w-100 card-img-top' %>
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            <% else %>
              <div class="carousel-inner">
              <div class="carousel-item active">
                <%= cl_image_tag item.photos.first.key, class: 'd-block w-100 card-img-top' %>
              </div>
              <div class="carousel-item">
                <%= cl_image_tag item.photos.second.key, class: 'd-block w-100 card-img-top' %>
              </div>
              <div class="carousel-item">
                <%= cl_image_tag item.photos.third.key, class: 'd-block w-100 card-img-top' %>
              </div>
             </div>
            <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text"><%= item.description %></p>
            <p class="card-text"><small class="text-muted">Last updated at <%= item.updated_at %></small></p>
          </div>
        </div>
    <% end %>
  <% end %>

  </div>
</div>

