<nav class="nav nav-page pt-2 pb-2 nav-pills nav-fill">
  <a class="nav-item text-left pl-3" href="#"><i class="fas fa-chevron-left"></i></a>
  <a class="nav-item text-center " href="#">user profile</a>
  <i class="nav-item text-right dropdown pt-1 pr-3 fas fa-ellipsis-v" data-toggle="dropdown" href="#" role="button" id="dropdownMenuLink" aria-haspopup="true" aria-expanded="false">
    <div class="dropdown-menu text-right" aria-labelledby="dropdownMenuLink">
      <a class="dropdown-item" href="#"><%= link_to 'Edit profile', edit_user_path %></a>
      <a class="dropdown-item" href="#">Location</a>
      <a class="dropdown-item" href="#">Logout</a>
    </div>
  </i>
</nav>

<div class="card card-profile text-center">
  <div class="card-img-top  mt-5">
   <%= cl_image_tag @user.photo.key, class: 'avatar-large' %>
  </div>
  <div class="card-body text-center">
    <h5 class="card-title"><%= @user.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @user.email %></h6>
    <p class="card-text mt-3"><%- @user.bio %></p>
</div>
  <div class="card-footer p-1 text-muted">
    <ul class="nav nav-fill">
      <li class="nav-item">
        <a class="trade-cal nav-link disabled" href="#">
          <%= current_user.offers.count do |offer| %>
          <% offer.pending? %>
          <% end %>
        </a>
        <a class="card-subtitle text-capitalize nav-link disabled" href="#">BIDS</a>
      </li>
      <li class="nav-item">
        <a class="trade-cal nav-link disabled" href="#">
          <%= current_user.offers.count do |offer| %>
          <% offer.accept? %>
          <% end %>
        </a>
        <a class="card-subtitle text-capitalize text-capitalizenav-link disabled" href="#">ENDED</a>
      </li>
      <li class="nav-item">
        <a class="trade-cal nav-link disabled" href="#">
           <%= current_user.offers.count do |offer| %>
          <% offer.decline? %>
          <% end %>
        </a>
        <a class="card-subtitle text-capitalize nav-link disabled" href="#">CANCELED</a>
      </li>
  </ul>
  </div>
</div>

<div class="card-body rating text-center">
  <h6 class="card-subtitle mb-2 mt-2 text-muted">Rating & Reviews</h6>
  <span class="stars" style="">
  <i class="fa fa-star mt-2"></i>
  <i class="fa fa-star mt-2"></i>
  <i class="fa fa-star mt-2"></i>
  </span>
  <p class="text-muted font-weight-lighter">based on xxx reviews</p>
  <div class="card-link text-right"><%= link_to 'Leave a review', new_user_review_path(@user) %></div>
    <ul>
      <% @user.reviews.each do |review| %>
      <li><%= review.content %></li>
      <% end %>
    </ul>


</div>



<div class="card-deck user-items">
  <div class="card-header text-center text-capitalize mt-3"> <%= @user.name.capitalize %>'s' Items </div>

    <% @user.items.each do |item| %>
      <%= link_to item_path(item) do %>
        <div class="card user-item">
            <% if item.photos.size == 1 %>
              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <%= cl_image_tag item.photos.first.key, class: 'd-block w-100 card-img-top' %>
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            <% else %>
              <div class="carousel-inner">
              <div class="carousel-item active">
                <%= cl_image_tag item.photos.first.key, class: 'd-block w-100 card-img-top' %>
              </div>
              <div class="carousel-item">
                <%= cl_image_tag item.photos.second.key, class: 'd-block w-100 card-img-top' %>
              </div>
              <div class="carousel-item">
                <%= cl_image_tag item.photos.third.key, class: 'd-block w-100 card-img-top' %>
              </div>
             </div>
            <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text"><%= item.description %></p>
            <p class="card-text"><small class="text-muted">Last updated at <%= item.updated_at %></small></p>
          </div>
        </div>
    <% end %>
  <% end %>

  </div>
</div>

